<div class="modal-dialog modal-md">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title pull-left m-l-10"><strong><%= t "new_remarking" %></strong></h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= cktext_area nil, "content[#{result.id}]", cols: 30, id: "content-#{result.id}", class: "editor" %>
        </div>
      </div>
      <div class="row">
        <center class="m-top-5">
          <%= link_to t("select"), "#", class: "btn btn-primary btn-sm",
            id: "btn-remarking", data: {id: result.id} %>
          <%= link_to t("cancel"), "#", class: "btn btn-danger btn-sm", id: "btn-del-remarking",
            data: {id: result.id} %>
        </center>
      </div>
    </div>
  </div>
</div>
