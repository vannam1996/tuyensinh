<%= stylesheet_link_tag "validate" %>
<div class="form-group col-md-7 m-left-275">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="text-center"><%= t "change_pass" %> <%= resource_name.to_s.humanize %></h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html:{method: :put} do |f| %>

        <div class="center-block w-600">
          <%= f.error_notification %>
        </div>

        <div class="form-inputs center-block w-600">

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p><%= t "not_cofirm" %> <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: t("min_pass"), required: true %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :current_password, hint: t("content_current_pass"), required: true %>
        </div>

        <div class="form-actions">
          <center>
            <%= f.button :submit, class: "btn btn-primary btn-md" do %>
              <%= t ".change_pass" %>
            <% end %>
          </center>
        </div>
      <% end %>
      <center>
        <h3><%= t("cancel_account") %></h3>

        <p><%= t "unhappy" %> <%= link_to t("cancel_account"),
          registration_path(resource_name), method: :delete,
          data: {confirm: t("sure")} %></p>

        <%= link_to t("back"), :back %>
      </center>
    </div>
  </div>
</div>
<%= javascript_include_tag "validates/change_pass" %>
