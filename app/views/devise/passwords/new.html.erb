<div id="login-ajax" class="animation-fadeIn">
  <div class="login-title text-center color-title-login">
    <h1>
      <i class="fa fa-flash"></i>
      <strong><%= t "app" %></strong><br>
      <small>
        <%= t "forgot_your" %>
        <strong><%= t "password" %></strong>
      </small>
    </h1>
  </div>
  <div class="block push-bit">
    <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post,
      class: "form-horizontal form-bordered form-control-borderless form-login"} do |f| %>
      <%= f.error_notification %>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control input-lg",
              placeholder: t("email"), id: "login-email" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-xs-12">
            <center>
              <%= f.button :submit, t("send_me_reset_password_instructions"), class: "btn btn-primary" %>
            </center>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row">
      <center>
        <%= render "devise/shared/links" %>
      </center>
    </div>
  </div>
</div>
<%= javascript_include_tag "validates/change_pass" %>
