<div id="login-ajax" class="animation-fadeIn">
  <div class="login-title text-center color-title-login">
    <h1>
      <i class="fa fa-flash"></i>
      <strong><%= t "app" %></strong><br>
      <small>
        <%= t "change_your" %>
        <strong><%= t "password" %></strong>
      </small>
    </h1>
  </div>
  <div class="block push-bit">
    <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put,
      class: "form-horizontal form-bordered form-control-borderless form-login"} do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <%= f.password_field :password, autofocus: true, placeholder: t("password"),
              class: "form-control input-lg"%>
          </div>
          <%= f.full_error :password %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: t("password"),
              placeholder: t("confirm_your_new_password") %>
          </div>
          <%= f.full_error :password_confirmation %>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-xs-12">
            <center>
              <%= f.button :submit, "Change my password", class: "btn btn-primary" %>
            </center>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row">
      <center>
        <%= render "devise/shared/links" %>
      </center>
    </div>
  </div>
</div>
<%= javascript_include_tag "validates/change_pass" %>
