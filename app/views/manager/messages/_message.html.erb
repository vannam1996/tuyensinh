<% if message.is_supporter? %>
  <div class="chat-message right">
    <div class="chat-avatar">
      <img class="chat-avatar-img" src="/assets/supporter.png" alt="">
    </div>
    <div class="chat-content">
      <div class="chat-content-inner">
        <p class="chat-text"><%= message.content %></p>
        <p class="chat-time"><%= (message.created_at + 7.hour).strftime("%d/%m/%Y %I:%M%p") %></p>
      </div>
    </div>
  </div>
<% else %>
  <div class="chat-message">
    <div class="chat-avatar">
      <img class="chat-avatar-img" src="/assets/customer.png" alt="">
    </div>
    <div class="chat-content">
      <div class="chat-content-inner">
        <p class="chat-text"><%= message.content %></p>
        <p class="chat-time"><%= (message.created_at + 7.hour).strftime("%d/%m/%Y %I:%M%p") %></p>
      </div>
    </div>
  </div>
<% end %>
