<%= stylesheet_link_tag "login" %>
<div id="modal-login" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div id="login-ajax">
        <div class="login-title text-center">
          <i class="close-form-login" data-dismiss="modal">&times;</i>
          <h1>
            <i class="fa fa-flash"></i>
            <strong><%= t "app" %></strong><br>
            <small>
              <%= t "please" %>
              <strong><%= t "login" %></strong>
            </small>
          </h1>
        </div>
        <div class="block">
          <div class="form-horizontal form-bordered form-control-borderless form-login">
            <%= render "devise_custom/form_login" %>
          </div>
          <div class="form-horizontal form-bordered form-control-borderless form-fogot display-none">
            <%= render "devise_custom/form_forgot_password" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
