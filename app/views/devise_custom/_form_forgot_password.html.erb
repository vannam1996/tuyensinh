<%= form_for resource, as: resource_name, url: password_path(resource_name),
  html: {method: :post, id: "form-forgot-password"} do |f| %>
  <div class="form-group forgot-error display-none">
    <div class="col-xs-12">
      <p class="color-red text-center"></p>
      <span class="close-error">&times;</span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg",
          id: "forgot-email", placeholder: t("email") %>
      </div>
    </div>
  </div>
  <div class="form-group text-center p-15">
    <%= f.submit t("send"), class: "btn btn-sm btn-primary" %>
  </div>
  <div class="form-group text-center p-15">
    <a href="javascript:void(0)" class="link-forgot-login">
    <small><%= t "login" %></small></a>
  </div>
<% end %>
