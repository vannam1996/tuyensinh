<div class="row d-flex">
  <%= render "notes_remarking" %>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="block full">
      <div class="block-title m-h-40">
        <div class="block-options pull-right">
          <%= link_to favorites_path(role: :register), remote: true,
            class: "btn btn-alt btn-sm btn-danger", title: t("has_mark") do %>
            <i class="fa fa-heart"></i>
          <% end %>
        </div>
        <h3 class="widget-content-light"></h3>
      </div>
      <% if allow_change_in_time?(@note) %>
        <div id="change-aspiration">
          <div class="row">
            <%= render "registers" %>
          </div>
          <div class="row">
            <div class="col-md-5 col-md-offset-4">
              <%= link_to t("new_register"), "",
                data: {target: "#modal-new-register", toggle: :modal},
                class: "btn btn-primary" %>
              <%= link_to t("edit_register"), edit_register_path(id: 1), remote: true,
                class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-md-12">
            <p class="text-center text-danger">
              <i class="fa fa-times"></i>
              <strong><%= t "not_time_change_register" %></strong>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="modal fade" id="favorite-majors" role="dialog" tabindex="-1" aria-hidden="true"></div>
<div id="modal-new-register" class="modal fade" role="dialog">
  <%= render partial: "new_register", locals: {register: current_user.registers.new} %>
</div>
<div id="modal-edit-aspiration" class="modal fade" role="dialog">

</div>
<%= javascript_include_tag "register_new" %>
