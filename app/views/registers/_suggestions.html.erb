<div class="row">
  <div class="col-md-12">
    <div class="block">
      <div class="block-title">
        <div class="block-options pull-right">
          <%= link_to "javascript:void(0)", id: "btn-back",
            class: "btn btn-alt btn-sm btn-danger toggle-bars" do %>
            <i class="fa fa-undo"></i>
            <%= t "back" %>
          <% end %>
        </div>
        <h2><%= t "suggestions" %></h2>
      </div>

      <div class="row">
        <div class="col-md-12 bars-container">
          <h4 class="sub-header"><%= t "level" %></h4>


          <div class="progress">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 55%;">safe</div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 bars-container">
          <h4 class="sub-header"><%= t "warning" %></h4>

          <div class="content">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 col-md-offset-5">
          <%= link_to t("confirm"), "javascript:void(0)", id: "btn-confirm",
            class: "btn btn-primary btn-md col-md-12 m-b-20" %>
        </div>
      </div>
    </div>
  </div>
</div>
