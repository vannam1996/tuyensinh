      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><strong>
          <%= t "edit_student" %>
        </strong></h4>
      </div>
      <div class="modal-body" id="body-edit-student">
