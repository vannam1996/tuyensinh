<tr role="row" class="user-<%= user.id %>">
  <td class="text-center"><%= user.people_id %></td>
  <td class="text-center"><%= user.name %></td>
  <td class="text-center"><%= l user.birthday, format: :long %></td>
  <td class="text-center">
    <div class="btn-group btn-group-xs">
      <%= link_to [:teachers, user], remote: true, class: "btn btn-default btn-xs" do %>
        <i class="fa fa-eye"></i>
      <% end %>
      <%= link_to edit_teachers_user_path(user), remote: true, class: "btn btn-primary btn-xs" do %>
        <i class="fa fa-edit"></i>
      <% end %>
    </div>
  </td>
</tr>
