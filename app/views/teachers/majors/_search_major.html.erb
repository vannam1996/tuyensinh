<%= search_form_for @q, url: teachers_majors_path, remote: true do |f| %>
  <div class="input-group">
    <div class="input-group-addon">
      <i class="fa fa-building-o"></i>
    </div>
    <%= f.select :school_id_eq, School.all
      .collect{|s| [s.name, s.id]}.unshift([t("all_school"), nil]), {},
      {class: "form-control"} %>
  </div>

  <div class="input-group">
    <div class="input-group-addon">
      <i class="fa fa-archive"></i>
    </div>
    <%= f.search_field :name_or_code_cont,
      class: "form-control", placeholder: t("enter_name_code_major") %>
  </div>

  <%= f.button :submit, class: "btn btn-info" do %>
    <i class="fa fa-search" aria-hidden="true"></i>
    <%= t "filter" %>
  <% end %>
<% end %>
