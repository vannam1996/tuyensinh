<div class="col-md-4">
  <div class="block">
    <div class="block-title">
      <h3 class="widget-content-light">
        <%= t "subjects_of" %> <strong><%= t "department" %>: <%= department.name %></strong>
      </h3>
    </div>
    <div class="row">
      <table role="grid" class="table table-vcenter table-striped">
        <tbody>
          <%= render partial: "subject", collection: department.subjects, as: :subject %>
        </tbody>
      </table>
    </div>
  </div>
</div>
