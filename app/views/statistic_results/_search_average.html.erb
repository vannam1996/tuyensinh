<%= form_with url: statistic_result_path, method: :get do %>
  <div class="col-md-2 pull-right">
    <div class="form-group">
      <div class="icon-addon addon-lg">
        <div id="search-by-subject">
          <%= select_tag :subjects, options_for_select(@subjects.map{|s| [s.name, s.id]}
            .unshift([t("subjects"), nil])), class: "form-control" %>
        </div>
        <label for="subjects" class="fa fa-briefcase" rel="tooltip"></label>
      </div>
    </div>
  </div>
  <div class="col-md-2 pull-right">
    <div class="form-group">
      <div class="icon-addon addon-lg">
        <%= select_tag :department, options_for_select(@departments.map{|s| [s.name, s.id]}
          .unshift([t("departments"), nil])), class: "form-control" %>
        <label for="department" class="fa fa-cubes" rel="tooltip"></label>
      </div>
    </div>
  </div>
  <%= button_tag :submit, class: "display-none", id: "btn-seach-average" %>
<% end %>
