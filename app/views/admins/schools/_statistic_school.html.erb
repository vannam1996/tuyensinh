<div class="col-sm-6 col-lg-3">
  <%= link_to new_admins_school_path, remote: true,
    class: "widget widget-hover-effect2" do %>
    <div class="widget-extra themed-background-success">
      <h4 class="widget-content-light">
        <strong><%= t "add_new" %></strong> <%= t "school" %>
      </h4>
    </div>
    <div class="widget-extra-full">
      <span class="h2 text-success animation-expandOpen">
        <i class="fa fa-plus"></i>
      </span>
    </div>
  <% end %>
</div>

<div class="col-sm-6 col-lg-3">
  <a href="javascript:void(0)" class="widget widget-hover-effect2">
    <div class="widget-extra themed-background-blackberry">
      <h4 class="widget-content-light">
        <strong><%= t "top" %></strong> <%= t "school" %>
      </h4>
    </div>
    <div class="widget-extra-full">
      <span class="h2 h2 animation-expandOpen">
        <%= @top.code %> / <%= @top.mark %>
      </span>
    </div>
  </a>
</div>

<div class="col-sm-6 col-lg-3">
  <a href="javascript:void(0)" class="widget widget-hover-effect2">
    <div class="widget-extra themed-background-dark">
      <h4 class="widget-content-light">
        <strong><%= t "all" %></strong> <%= t "school" %>
      </h4>
    </div>
    <div class="widget-extra-full">
      <span class="h2 h2 themed-color-dark animation-expandOpen">
        <%= @total %>
      </span>
    </div>
  </a>
</div>

<div class="col-sm-6 col-lg-3">
  <a href="javascript:void(0)" class="widget widget-hover-effect2">
    <div class="widget-extra themed-background-fire">
      <h4 class="widget-content-light">
        <strong><%= t "hot" %></strong> <%= t "school" %>
      </h4>
    </div>
    <div class="widget-extra-full">
      <span class="h2 text-danger themed-color-dark animation-expandOpen">
        <%= @hot.code %> / <%= @hot.num %>
      </span>
    </div>
  </a>
</div>
