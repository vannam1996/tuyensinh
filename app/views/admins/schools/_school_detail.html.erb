<div class="modal-dialog modal-md">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">
        &times;
      </button>
      <h4 class="modal-title"><strong>
        <%= @school.name %> - <%= @school.code %>
      </strong></h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6">
          <%= image_tag @school.logo.url, class: "col-md-12" %>
        </div>

        <div class="col-md-6">
          <ul>
            <li><strong><%= t "address" %></strong>:
              <h4 class="text-info"><%= @school.address %></h4></li>
            <li><strong><%= t "phone" %></strong>:
              <h4 class="text-info"><%= @school.phone %></h4></li>
            <li><strong><%= t "email" %></strong>:
              <h4 class="text-info"><%= @school.email %></h4></li>
            <li><strong><%= t "level" %></strong>:
              <h4 class="text-info"><%= @school.level %></h4></li>
            <% if @school.url_school.present? %>
              <li><strong><%= t "website" %></strong>:<h4 class="text-info">
                <%= link_to nil, "http://www.#{@school.url_school}/" %>
              </h4></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <label><%= t "introducing" %>:</label>
          <ul>
            <li>
              <p><%= raw @school.introducing %></p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
