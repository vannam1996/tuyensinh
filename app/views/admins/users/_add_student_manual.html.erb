<div class="col-md-12">
  <%= simple_form_for [:admins, @student], method: :post, remote: true do |f| %>
    <div class="col-md-6">
      <%= f.input :name %>
    </div>
    <div class="col-md-6">
      <div class="form-group date user_birthday">
        <label class="control-label date optional" for="user_birthday">
          <%= t "birthday" %>
        </label>
        <%= f.text_field :birthday, type: "date", class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <%= f.input :email %>
    </div>
    <div class="col-md-6">
      <%= f.input :phone %>
    </div>
    <div class="col-md-6">
      <%= f.input :address, as: :string %>
    </div>
    <div class="col-md-6">
      <%= f.input :people_id, label: t("people_id") %>
    </div>
    <div class="col-md-6">
      <%= f.input :nation %>
    </div>
    <div class="col-md-6">
      <%= f.input :nationality %>
    </div>
    <div class="col-md-6">
      <%= f.input :identification_number %>
    </div>
    <div class="col-md-6">
      <%= f.input :religion %>
    </div>
    <%= f.submit t("submit"), class: "btn btn-success" %>
  <% end %>
  <%= link_to t("back"), "javascript:void(0)", id: "btn-back" %>
</div>
