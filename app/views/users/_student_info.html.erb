<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to "#tab-1", data: {toggle: "tab"} do %>
      <%= t "info_register" %>
    <% end %>
  </li>
  <li>
    <%= link_to "#tab-2", data: {toggle: "tab"} do %>
      <%= t "info_others" %>
    <% end %>
  </li>
</ul>
<div class="tab-content">
  <div id="tab-1" class="tab-pane fade in active">
    <table class="table table-hover">
      <tbody>
        <% if @registers.present? %>
          <%= render partial: "aspiration", collection: @registers, as: :register %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="tab-2" class="tab-pane fade">
    <table class="table table-hover">
      <tbody>
        <tr>
          <td class="col-md-3">
            <strong>
              <i class="fa fa-user-o"></i> <%= t "people_id" %>
            </strong>
          </td>
          <td><%= @user.people_id %></td>
          <td class="col-md-3">
            <strong>
              <i class="fa fa-legal"></i> <%= t "religion" %>
            </strong>
          </td>
          <td><%= @user.religion %></td>
        </tr>
        <tr>
          <td class="col-md-3">
            <strong>
              <i class="fa fa-address-card"></i> <%= t "address" %>
            </strong>
          </td>
          <td><%= @user.address %></td>
          <td class="col-md-3">
            <strong>
              <i class="fa fa-address-card-o"></i> <%= t "identification_number" %>
            </strong>
          </td>
          <td class="col-md-3">
            <%= @user.identification_number %>
          </td>
        </tr>
        <tr>
          <td class="col-md-3">
            <strong>
              <i class="fa fa-font-awesome"></i> <%= t "nation" %>
            </strong>
          </td class="col-md-3">
          <td ><%= @user.nation %></td>
          <td class="col-md-3">
            <strong>
              <i class="fa fa-phone"></i> <%= t "phone" %>
            </strong>
          </td>
          <td class="col-md-3">
            <%= @user.phone %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
