<nav class="navbar navbar-user m-0">
  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-left site-nav">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span> <%= t "home" %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li>
          <%= link_to notes_path do %>
            <i class="  fa fa-calendar"></i>
            <span><%= t "competition_calendar" %></span>
          <% end %>
        </li>

        <li>
          <%= link_to statistic_results_path do %>
            <i class="fa fa-bar-chart"></i>
            <span><%= t "statistics_resuls" %></span>
          <% end %>
        </li>

        <li>
          <%= link_to majors_path do %>
            <i class="fa fa-archive"></i>
            <span><%= t "majors" %></span>
          <% end %>
        </li>

        <% if current_user.student? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">
              <i class="gi gi-lightbulb"></i>
              <span><%= t "registers" %></span>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu min-w-180">
              <li>
                <%= link_to user_suggestions_path(current_user) do %>
                  <span><%= t "suggestions" %></span>
                <% end %>
              </li>

              <li>
                <%= link_to registers_path do %>
                  <span><%= t "change_aspiration" %></span>
                <% end %>
              </li>
            </ul>
          </li>

          <li>
            <%= link_to file_remarkings_path do %>
              <i class="fa fa-reply"></i>
              <span><%= t "remarking" %></span>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <li>
          <h3 class="title-main"><strong><%= t "title_main" %></strong></h3>
        </li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right site-nav">
      <% if user_signed_in? %>
        <li class="dropdown">
          <%= render "notifications/notifications" %>
        </li>

        <li class="dropdown">
          <a class="dropdown-toggle h-50 p-top-5" data-toggle="dropdown" href="#">
            <%= image_tag current_user.avatar.url, class: "img-circle", size: 40 %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu min-w-200">
            <% if current_user.teacher? %>
              <li>
                <%= link_to teachers_users_path do %>
                  <%= t("teacher") %><i class="fa fa-users pull-right"></i>
                <% end %>
              </li>
            <% end %>
            <% if current_user.admin? %>
              <li>
                <%= link_to admins_users_path(role: :student) do %>
                  <%= t("admin") %><i class="fa fa-user-secret pull-right"></i>
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to user_path(current_user) do %>
                <%= t("profile") %><i class="fa fa-address-book pull-right"></i>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_url(current_user) do %>
                <%= t("change_pass") %><i class="fa fa-pencil-square-o pull-right"></i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <%= t("logout") %><i class="fa fa-sign-out pull-right"></i>
              <% end %>
            </li>
          </ul>
        </li>
      <% else %>
        <li>
          <%= link_to new_user_session_path, class: "btn-login-user" do %>
            <i class="fa fa-sign-in"></i> <%= t("login") %>
          <% end %>
        </li>
      <% end %>
      <%= render "shared/language_local" %>
    </ul>
  </div>
</nav>
