<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "logo.jpg" %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render "layouts/user_sidebar" %>
    <% end %>
    <div id="main" class="p-0">
      <%= render "layouts/user_header" %>
      <div id="content-body-custom" class="p-15">
        <div class="row">
          <center>
            <div class="w-1200">
              <% flash.each do |message_type, message| %>
                <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
              <% end %>
            </div>
          </center>
          <div id="page-content">
            <%= yield %>
            <a href="#" id="to-top" style="display: block;"><i class="fa fa-angle-double-up"></i></a>
          </div>
        </div>
      </div>
    </div>
  </body>

  <footer class="site-footer padding-10-0 footer-custom">
    <%= render "layouts/user_footer" %>
  </footer>
</html>
